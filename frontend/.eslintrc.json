{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/destructuring-assignment": [0],
    "class-methods-use-this": [0],
    "jsx-a11y/label-has-associated-control": [0]
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "parser": "babel-eslint"
}

